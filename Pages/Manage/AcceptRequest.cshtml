@page
@model ProjektSpotkaniaGrupTematycznych.Pages.Manage.AcceptRequestModel
@{
}
@using ProjektSpotkaniaGrupTematycznych.Models;

<h1>Accept user request</h1>

<h3>Are you sure you want to accept this?</h3>
<div>
    <h4>Group</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvitationRequest.InvokerId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvitationRequest.InvokerId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvitationRequest.RequestDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvitationRequest.RequestDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvitationRequest.Reason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvitationRequest.Reason)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="InvitationRequest.Id" />
        <input type="submit" value="Accept"/>
    </form>
    <a asp-page="/DetailsGroup" asp-route-id="@Model.Group.Id">Back to the Group Details</a>
</div>